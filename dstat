### Main entrance
if __name__ == '__main__':
	op=Options(sys.argv[1:])
#	cf=Config()
	try:
		main()
	except KeyboardInterrupt, e:
		if step != op.delay:
			print
		print ansi['reset'] + 'Exiting on user request'
		sys.exit(6)
	except OSError, e:
#		print e.errno
		if step != op.delay:
			print
		print ansi['reset'] + 'OSError: %s' %e
		sys.exit(7)

